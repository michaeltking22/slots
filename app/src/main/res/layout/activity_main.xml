<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="com.example.michael.myapplication.MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/prog1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/points" />
    </LinearLayout>
       <RelativeLayout
           android:id="@+id/seek"
           android:layout_below="@id/layout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <SeekBar
               android:id="@+id/bar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_centerVertical="true"
               android:max="20">

           </SeekBar>
       </RelativeLayout>




    <GridLayout
        android:id="@+id/grid"
        android:layout_marginTop="75dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout">
        <ImageView
            android:id="@+id/box1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/box1"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="-10dp"
            android:padding="2dp"
            android:src="@drawable/berry"
            android:scaleType="centerInside"

            />

        <ImageView
            android:id="@+id/box2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/box1"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:padding="2dp"
            android:src="@drawable/cherry"
            android:scaleType="centerInside"

            />

        <ImageView
            android:id="@+id/box3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/box1"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/pear"
            android:padding="2dp"

            />
    </GridLayout>

    <RelativeLayout
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/pointView"
        android:layout_above="@id/grid">

        <Button
            android:id="@+id/roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="ROLL/stop"
            android:onClick="buttonPressed" />


        <Button
            android:id="@+id/rules"
            android:onClick="rulesPressed"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rules"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"
            />






</RelativeLayout>
</RelativeLayout>